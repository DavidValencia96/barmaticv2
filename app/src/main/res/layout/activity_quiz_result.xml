<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryAPP"
    tools:context=".quizResult">

    <ImageView
        android:id="@+id/trofeoIcon"
        android:layout_width="340dp"
        android:layout_height="270dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/trofeo" />

    <TextView
        android:id="@+id/textCongrulations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_below="@+id/trofeoIcon"
        android:text="Felicitaciones, completastes el Quiz"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_below="@+id/textCongrulations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:id="@+id/correctAnswers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Respuestas correctas: 0"
            android:textColor="@color/green"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/incorrectAnswers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Respuestas incorrectas: 0"
            android:textColor="@color/red"
            android:textStyle="bold"
            />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startNewQuizBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_back_green20"
        android:text="Nuevo Quiz"
        android:textColor="@color/white"
        android:textStyle="bold" />


</RelativeLayout>